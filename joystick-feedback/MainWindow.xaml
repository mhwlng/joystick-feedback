<Window x:Class="joystick_feedback.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:joystick_feedback="clr-namespace:joystick_feedback"
        WindowStyle="None"
        Closing="MainWindow_Closing"
        MouseDown="MainWindow_OnMouseDown"
        Title="joystick_feedback" Height="300" Width="500" SizeToContent="WidthAndHeight" ResizeMode="NoResize" 
        Left="{joystick_feedback:SettingBinding Left}"
        Top="{joystick_feedback:SettingBinding Top}">
        <Image Name="im"  Height="240" Width="320" />
</Window>

    
