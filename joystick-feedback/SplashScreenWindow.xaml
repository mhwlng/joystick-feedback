<Window x:Class="joystick_feedback.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="50"
        Width="250"
        Topmost="True" 
        ShowInTaskbar="False">
    <StackPanel VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold"
                   VerticalAlignment="Center">Joystick FeedBack</TextBlock>
        <TextBlock x:Name="ProgressText" HorizontalAlignment="Center"
                   VerticalAlignment="Center">Loading...</TextBlock>

    </StackPanel>
</Window>